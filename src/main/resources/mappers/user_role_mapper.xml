<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.korit.security_practice.mapper.UserRoleMapper">
    <resultMap id="UserRoleMap" type="com.korit.security_practice.entity.UserRole">
        <id property="userRoleId" column="user_role_id"/>
        <result property="userId" column="user_id"/>
        <result property="roleId" column="role_id"/>
    </resultMap>
    <insert id="addUserRole" useGeneratedKeys="true" keyProperty="userRoleId">
        INSERT INTO user_role_tb (user_role_id, user_id, role_id)
        VALUES (0, #{userId}, #{roleId});
    </insert>
    <update id="modifyRole">
        UPDATE user_role_tb
        SET role_id = #{roleId}
        WHERE user_id = #{userId};
    </update>
</mapper>